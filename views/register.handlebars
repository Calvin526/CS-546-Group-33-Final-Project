<h1>{{title}}</h1>
{{#if error}}
    <p class="error-message">{{error}}</p>
{{/if}}
<form method="POST" action="/register" id="register-form">
    <div class="input-group">
        <label for="firstNameInput">First Name</label>
        <input type="text" id="firstNameInput" name="firstNameInput">
    </div>
    <div class="input-group">
        <label for="lastNameInput">Last Name</label>
        <input type="text" id="lastNameInput" name="lastNameInput">
    </div>
    <div class="input-group">
        <label for="emailAddressInput">Email</label>
        <input type="email" id="emailAddressInput" name="emailAddressInput">
    </div>
    <div class="input-group">
        <label for="phonenumberInput">Phone Number</label>
        <input type="number" id="phonenumberInput" name="phonenumberInput">
    <div class="input-group">
        <label for="passwordInput">Password</label>
        <input type="password" id="passwordInput" name="passwordInput">
    </div>
    <div class="input-group">
        <label for="confirmPasswordInput">Confirm Password</label>
        <input type="password" id="confirmPasswordInput" name="confirmPasswordInput">
    </div>
    <div class="input-group">
    <label for="ageInput">Age:</label>
    <input type="number" id="ageInput" name="ageInput" min="18" max="120" required>
</div>

<div class="input-group">
    <label for="interestsInput">Interests:</label>
    <input type="text" id="interestsInput" name="interestsInput" placeholder="Enter interests separated by commas" required>
</div>

<div class="input-group">
    <label for="biographyInput">Biography:</label>
    <input type="text" id="biographyInput" name="biographyInput" placeholder="Tell me about yourself" required>
</div>

    <div class="input-group">
        <input type="submit" value="Sign Up">
    </div>
</form>
<script src="../scripts/register_loginscript.js"></script>
<p>Do you already have an existing account? Click <a href="/login">here</a> to log-in</p>

