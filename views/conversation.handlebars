<h1>{{title}}</h1>
{{#if error}}
    <div id="error"><p>{{error}}</p></div>
{{else}}
    {{!-- <div id="conversationHeader"><h1>Conversation with {{otherGroupName}}</h1></div> --}}
    <div id="conversationId" data-conversation-id="{{conversationId}}"></div>
    <div id="senderId" data-sender-id="{{thisGroupId}}"></div>
    <div id="thisGroupName" data-this-group-name="{{thisGroupName}}"></div>
    <div id="otherGroupName" data-other-group-name="{{otherGroupName}}"></div>

    <div id="messageContainer"></div>

    <form id="messageForm" method="POST">
        <textarea id="messageText" placeholder="Type your message here"></textarea>
        <div id="sendMessageButton"><button type="submit">Send Message</button></div>
        <div id="messageSendError" hidden> <p>There was an error sending your message</p></div>
    </form>


    <div id="otherConversationsHref"><a href="/messages">Go back to your other conversations</a></div>
    <div id="homeHref"><a href="/">Go Home</a></div>

{{/if}}
<script src="/public/js/conversation.js"></script>